{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"workspaceName": {
			"type": "string",
			"metadata": "Workspace name",
			"defaultValue": "synapse-workspace-001-test"
		},
		"DataLakeGoldContainerConnection_accountKey": {
			"type": "secureString",
			"metadata": "Secure string for 'accountKey' of 'DataLakeGoldContainerConnection'"
		},
		"synapse-workspace-001-test-WorkspaceDefaultSqlServer_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'synapse-workspace-001-test-WorkspaceDefaultSqlServer'",
			"defaultValue": "Integrated Security=False;Encrypt=True;Connection Timeout=30;Data Source=tcp:synapse-workspace-001-test.sql.azuresynapse.net,1433;Initial Catalog=@{linkedService().DBName}"
		},
		"DataLakeGoldContainerConnection_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://store0sales0data.dfs.core.windows.net/"
		},
		"synapse-workspace-001-test-WorkspaceDefaultStorage_properties_typeProperties_url": {
			"type": "string",
			"defaultValue": "https://syanpseusageaccount.dfs.core.windows.net"
		}
	},
	"variables": {
		"workspaceId": "[concat('Microsoft.Synapse/workspaces/', parameters('workspaceName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('workspaceName'), '/DataLakeGoldContainerConnection')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('DataLakeGoldContainerConnection_properties_typeProperties_url')]",
					"accountKey": {
						"type": "SecureString",
						"value": "[parameters('DataLakeGoldContainerConnection_accountKey')]"
					}
				},
				"connectVia": {
					"referenceName": "AutoResolveIntegrationRuntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('workspaceId'), '/integrationRuntimes/AutoResolveIntegrationRuntime')]"
			]
		},
		{
			"name": "[concat(parameters('workspaceName'), '/synapse-workspace-001-test-WorkspaceDefaultSqlServer')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"parameters": {
					"DBName": {
						"type": "String"
					}
				},
				"annotations": [],
				"type": "AzureSqlDW",
				"typeProperties": {
					"connectionString": "[parameters('synapse-workspace-001-test-WorkspaceDefaultSqlServer_connectionString')]"
				},
				"connectVia": {
					"referenceName": "AutoResolveIntegrationRuntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('workspaceId'), '/integrationRuntimes/AutoResolveIntegrationRuntime')]"
			]
		},
		{
			"name": "[concat(parameters('workspaceName'), '/synapse-workspace-001-test-WorkspaceDefaultStorage')]",
			"type": "Microsoft.Synapse/workspaces/linkedServices",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"annotations": [],
				"type": "AzureBlobFS",
				"typeProperties": {
					"url": "[parameters('synapse-workspace-001-test-WorkspaceDefaultStorage_properties_typeProperties_url')]"
				},
				"connectVia": {
					"referenceName": "AutoResolveIntegrationRuntime",
					"type": "IntegrationRuntimeReference"
				}
			},
			"dependsOn": [
				"[concat(variables('workspaceId'), '/integrationRuntimes/AutoResolveIntegrationRuntime')]"
			]
		},
		{
			"name": "[concat(parameters('workspaceName'), '/AutoResolveIntegrationRuntime')]",
			"type": "Microsoft.Synapse/workspaces/integrationRuntimes",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"type": "Managed",
				"typeProperties": {
					"computeProperties": {
						"location": "AutoResolve",
						"dataFlowProperties": {
							"computeType": "General",
							"coreCount": 8,
							"timeToLive": 0
						}
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/WorkspaceSystemIdentity')]",
			"type": "Microsoft.Synapse/workspaces/credentials",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"type": "ManagedIdentity",
				"typeProperties": {}
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/AccessDataLake')]",
			"type": "Microsoft.Synapse/workspaces/sqlscripts",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"content": {
					"query": "SELECT\n    COUNT(*)\nFROM\n    OPENROWSET(\n        BULK 'https://store0sales0data.dfs.core.windows.net/gold/SalesLT/Product/',\n        FORMAT = 'DELTA'\n    ) AS [result] \n\nSELECT\n    COUNT(*)\nFROM\n    OPENROWSET(\n        BULK 'https://store0sales0data.dfs.core.windows.net/silver/SalesLT/Product/',\n        FORMAT = 'DELTA'\n    ) AS [result] \n\nSELECT\n    COUNT(*)\nFROM\n    OPENROWSET(\n        BULK 'https://store0sales0data.dfs.core.windows.net/silver/SalesLT/Product/*',\n        FORMAT = 'PARQUET'\n    ) AS [result] \n\nORDER BY ProductCategoryID ASC",
					"metadata": {
						"language": "sql"
					},
					"currentConnection": {
						"databaseName": "goldcontainerDB",
						"poolName": "Built-in"
					},
					"resultLimit": 5000
				},
				"type": "SqlQuery"
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/QueryViewsCreated')]",
			"type": "Microsoft.Synapse/workspaces/sqlscripts",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"content": {
					"query": "\n\nSelect * FROM Customer\n\nSelect Count(*) FROM Product\n\n\n\n",
					"metadata": {
						"language": "sql"
					},
					"currentConnection": {
						"databaseName": "goldcontainerDB",
						"poolName": "Built-in"
					},
					"resultLimit": 5000
				},
				"type": "SqlQuery"
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/ServerLevelCredentialForSQLlogin')]",
			"type": "Microsoft.Synapse/workspaces/sqlscripts",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"content": {
					"query": "CREATE CREDENTIAL [https://store0sales0data.dfs.core.windows.net/gold]\nWITH IDENTITY='SHARED ACCESS SIGNATURE'\n, SECRET = '?sv=2022-11-02&ss=bfqt&srt=sco&sp=rwdlacupyx&se=2023-10-24T01:34:16Z&st=2023-10-22T17:34:16Z&spr=https&sig=zaoRsxpojZAYMSYFhmYPYhbRXiAFrQEbzG7dMkqEJCo%3D';\nGO\n\nDROP CREDENTIAL [https://store0sales0data.dfs.core.windows.net/gold]",
					"metadata": {
						"language": "sql"
					},
					"currentConnection": {
						"databaseName": "goldcontainerDB",
						"poolName": "Built-in"
					},
					"resultLimit": 5000
				},
				"type": "SqlQuery"
			},
			"dependsOn": []
		},
		{
			"name": "[concat(parameters('workspaceName'), '/StoredProcedure')]",
			"type": "Microsoft.Synapse/workspaces/sqlscripts",
			"apiVersion": "2019-06-01-preview",
			"properties": {
				"content": {
					"query": "USE goldcontainerDB\nGO\n\nCREATE OR ALTER PROC create_views_from_tables \n                            @view_name NVARCHAR(100)\nAS \nBEGIN \nDECLARE @statement VARCHAR(MAX)\n\n   SET @statement = N'CREATE OR ALTER VIEW '+ @view_name +' AS\n   SELECT * FROM OPENROWSET(\n        BULK ''https://store0sales0data.dfs.core.windows.net/gold/SalesLT/' + @view_name + '/'',\n        FORMAT = ''DELTA''\n       ) as [result]'\n   EXEC (@statement)\n\nEND\nGO\n\nEXEC create_views_from_tables 'Product'\n",
					"metadata": {
						"language": "sql"
					},
					"currentConnection": {
						"databaseName": "goldcontainerDB",
						"poolName": "Built-in"
					},
					"resultLimit": 5000
				},
				"type": "SqlQuery"
			},
			"dependsOn": []
		}
	]
}